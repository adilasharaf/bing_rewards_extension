{
  "version": "1.2.1",
  "manifest_version": 3,
  "name": "Bing Rewards",
  "host_permissions": ["*://*/*"],
  "description": "Bing Rewards auto search extension",
  "permissions": [
    "scripting",
    "contextMenus",
    "activeTab",
    "tabs",
    "storage",
    "unlimitedStorage",
    "tabs",
    "declarativeNetRequest",
    "offscreen"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "all_frames": true,
      "matches": ["https://www.bing.com/search?*"],
      "js": ["content.js"]
    }
  ]
}
